{% extends 'OroNavigationBundle:Menu:menu.html.twig' %}

{% block linkElement %}
    {% set label %}
        {{ block('label') }}
    {% endset %}
    {% if item.extras is defined and item.extras.template is defined %}
        {{ include(item.extras.template, {'label': label}, ignore_missing = true) }}
    {% else %}
        {% if item.extras is defined and item.extras.module is defined %}
            {% set itemAttributes = itemAttributes|merge({'data-module': item.extras.module })%}
        {% endif %}
        {% if item.extras is defined and item.extras.options is defined %}
            {% set itemAttributes = itemAttributes|merge({'data-options': item.extras.options })%}
        {% endif %}
        <a href="javascript:void(0);"{{ oro_menu.attributes(itemAttributes) }}>{{ label }}</a>
    {% endif %}
{% endblock %}
