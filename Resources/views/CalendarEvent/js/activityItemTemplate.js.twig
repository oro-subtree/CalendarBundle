{% set entityClass = 'Oro\\Bundle\\CalendarBundle\\Entity\\CalendarEvent' %}
{% set entityName  = oro_entity_config_value(entityClass, 'label')|trans %}
<script type="text/html" id="{{ id|e('html_attr')|raw }}">
    <div class="accordion-group">
        <div class="accordion-heading collapse<% if (!collapsed) { %> in<% } %>">
            <div class="title-item">
                <a href="#accordion-item<%= id %>" class="no-hash accordion-toggle<% if (collapsed) { %> collapsed<% } %>"></a>
                <span class="icon">
                    <i class="{{ oro_entity_config_value(entityClass, 'icon')|raw }}"></i>
                </span>
                <span class="visual">
                    <span class="details">
                        {{ entityName|raw }}
                        <% var template = (verb == 'create')
                            ? {{ 'oro.calendar.calendarevent.added_by'|trans|json_encode|raw }}
                            : {{ 'oro.calendar.calendarevent.updated_by'|trans|json_encode|raw }};
                        %>
                        <%= _.template(
                            template,
                            {
                                user: '<a class="user" href="' + owner_url + '">' +  _.escape(owner) + '</a>',
                                date: '<i class="date">' + updatedAt + '</i>'
                            },
                            { interpolate: /\{\{(.+?)\}\}/g }
                        ) %>
                    </span>
                    <span class="message-item message">
                        <a href="#" class="no-hash accordion-toggle"><%= subject %></a>
                    </span>
                </span>
            </div>
            <div class="actions">
                <button class="btn item-edit-button<% if (!editable) { %> disabled<% } %>" <% if (!editable) { %> disabled="disabled"<% } %>
                    title="{{ 'oro.calendar.calendarevent.update_event'|trans({'{{ entity }}': entityName})|e('html_attr')|raw }}">
                    <i class="icon-edit hide-text">{{ 'oro.calendar.calendarevent.update_event'|trans({'{{ entity }}': entityName})|e('html')|raw }}</i>
                </button>
                <button class="btn item-remove-button<% if (!removable) { %> disabled<% } %>" <% if (!removable) { %> disabled="disabled"<% } %>
                    title="{{ 'oro.calendar.calendarevent.delete_event'|trans({'{{ entity }}': entityName})|e('html_attr')|raw }}">
                    <i class="icon-trash hide-text">{{ 'oro.calendar.calendarevent.delete_event'|trans({'{{ entity }}': entityName})|e('html')|raw }}</i>
                </button>
            </div>
        </div>
        <div class="accordion-body collapse<% if (!collapsed) { %> in<% } %>" id="accordion-item<%= id %>">
            <div class="subject">
                <a href="#" class="no-hash accordion-toggle"><%= subject %></a>
            </div>
            <div class="message">
                <% if (data != null) {
                    var dateTimeFormatter = require('orolocale/js/formatter/datetime');
                    var templateCalendarEvent = '<div class="control-group">' +
                        '<label class="control-label">[[ label ]]</label>' +
                        '<div class="controls">' +
                            '<div class="control-label">[[ value ]]</div>' +
                            '</div>' +
                        '</div>';
                    %>

                    <%= _.template(templateCalendarEvent,
                        {label: '{{ 'oro.calendar.calendarevent.description.label'|trans|raw }}', value: data['description']},
                        {interpolate: /\[\[(.+?)\]\]/g}
                    ) %>

                    <%= _.template(templateCalendarEvent,
                        {
                            label: '{{ 'oro.calendar.calendarevent.start.label'|trans|raw }}',
                            value: dateTimeFormatter.formatDateTime(data['start_date'])
                        },
                        {interpolate: /\[\[(.+?)\]\]/g}
                    ) %>

                    <%= _.template(templateCalendarEvent,
                        {
                            label: '{{ 'oro.calendar.calendarevent.end.label'|trans|raw }}',
                            value: dateTimeFormatter.formatDateTime(data['end_date'])
                        },
                        {interpolate: /\[\[(.+?)\]\]/g}
                    ) %>

                <% } %>
            </div>
        </div>
    </div>
</script>
