<div class="btn-group" role="group">
    {% set statuses = entity.availableInvitationStatuses %}
    {% for status in statuses  %}
        {% set statusName = calendarMacros.calendar_event_invitation_status(status) %}
        {{ UI.link({
            'aCss': 'btn btn-default',
            'path':  path('oro_calendar_event_change_status', {'id': entity.id, 'status': status}),
            'label': statusName|trans,
            'title': statusName|trans
        }) }}
    {% endfor %}
</div>
