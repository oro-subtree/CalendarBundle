{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set pageTitle = 'oro.calendar.systemcalendarevent.plural_label'|trans %}

{% block navButtons %}
    {% if resource_granted('oro_calendar_event_create') %}
        <div class="btn-group">
            {{ UI.addButton({
            'path' : path('oro_system_calendar_event_create', {'id': params.calendarId}),
            'entity_label': 'oro.calendar.systemcalendarevent.label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
