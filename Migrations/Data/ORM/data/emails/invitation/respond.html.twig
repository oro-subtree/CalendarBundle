@name = calendar_invitation_respond
@entityName = Oro\Bundle\CalendarBundle\Entity\CalendarEvent
@subject = {{ entity.title }}
@isSystem = 1
@isEditable = 1

<h1>{{ entity.title }}</h1>
<div>
    {{ entity.calendar }} responds to an invitation {{ entity.title }}.
    <p><i>Start date:</i> {{ entity.start|date('F j, Y, g:i A') }}</p>
    <p><i>End date:</i> {{ entity.end|date('F j, Y, g:i A') }}</p>
    <p><i>Description:</i>{{ entity.description }}</p>
</div>